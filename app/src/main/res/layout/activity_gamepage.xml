<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appback"
    tools:context=".gamepage">

    <TextView
        android:id="@+id/categories"
        android:layout_width="243dp"
        android:layout_height="55dp"
        android:layout_marginTop="150dp"
        android:text="CATEGORIES"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/colours"
        android:layout_width="142dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:background="#2196F3"
        android:text="Colours"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/categories"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/categories"
        app:layout_constraintTop_toBottomOf="@+id/categories" />

    <Button
        android:id="@+id/animals"
        android:layout_width="142dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:background="#2196F3"
        android:text="Animals"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/colours"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/colours"
        app:layout_constraintTop_toBottomOf="@+id/colours" />

    <Button
        android:id="@+id/brands"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="#2196F3"
        android:text="Brands"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/animals"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/animals"
        app:layout_constraintTop_toBottomOf="@+id/animals" />

    <Button
        android:id="@+id/countries"
        android:layout_width="142dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="#2196F3"
        android:text="Countries"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/brands"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/brands"
        app:layout_constraintTop_toBottomOf="@+id/brands" />

    <Button
        android:id="@+id/back"
        android:layout_width="73dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:background="#2196F3"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>